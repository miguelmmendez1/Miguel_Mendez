<% include partials/_headermun %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-9">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>Id</td>
            <td>Categorias</td>
            <td>Descripcion</td>
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].categoria %></td>
                <td><%= data[i].descripcion %></td>
                <td>
                  <a style="background-color: rgb(89, 97, 211) ;" href="/categorias/updatem/<%= data[i].id %>" class="btn btn-info">Actualizar</a>
                  <a style="margin-top: 2px; background-color: red;" href="/categorias/deletem/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <div class="card-body">

        <form action="/categorias/addm" method="POST">
          <div class="form-group">
            <input type="text" name="categoria" placeholder="Nombre" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="descripcion" placeholder="Descripcion" class="form-control">
          </div>

          <button style="background-color: green;" type="submit" class="btn btn-primary">
            Guardar Categoria
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footermun %>
