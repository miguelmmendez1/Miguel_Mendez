<% include partials/_header %>
<div class="col-md-3">
  <div class="card-body">

    <form action="/add" method="POST">
      <div class="form-group">
        <input type="text" name="producto" placeholder="producto" class="form-control" autofocus>
      </div>
      <div class="form-group">
        <input type="number" name="precio" placeholder="precio" class="form-control">
      </div>
      <div class="form-group">
        <input type="number" name="disponibles" placeholder="disponibles" class="form-control">
      </div>

      <div class="form-group">
        <select name="categoria" class="form-control" id="categoria">
          <option selected disabled>Categorias</option>
          <% for (var i = 0; i < categorias.length; i++) { -%>
            <option value="<%= categorias[i].id %>">
              <%= categorias[i].categoria %>
            </option>
          <% } -%>
        </select>
      </div>

      <button style="background-color: green;" type="submit" class="btn btn-primary">
        Guardar Producto
      </button>
    </form>
  </div>
</div>


<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>Id</td>
            <td>Nombre</td>
            <td>Precio</td>
            <td>Disponibles</td>
            <td>Categorias</td>
            <td>Acciones</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= (i + 1) %></td>
                <td><%= data[i].producto %></td>
                <td><%= data[i].precio %></td>
                <td><%= data[i].disponibles %></td>
                <td><%= data[i].categoria %></td>
                
                <td>
                  <a style="background-color: rgb(89, 97, 211);" href="/update/<%= data[i].id %>" class="btn btn-info">Actualizar</a>
                  <a style="background-color: red;" style="margin-top: 3px;" href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% include partials/_footer %>
