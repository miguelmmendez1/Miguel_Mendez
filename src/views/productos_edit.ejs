<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card">
      <div class="card-body">
        <form action="/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <input type="text" name="producto" value="<%= data.producto%>" placeholder="Name" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="number" name="precio" value="<%= data.precio%>" placeholder="Precio" class="form-control">
          </div>
          <div class="form-group">
            <input type="number" name="disponibles" value="<%= data.disponibles%>" placeholder="Disponibles" class="form-control">
          </div>
          <div class="form-group">
            <select name="categoria" class="form-control" id="categoria">
              <option selected disabled>Categorias</option>
              <% for (var i = 0; i < categorias.length; i++) { -%>
                <option value="<%= categorias[i].id %>">
                  <%= categorias[i].categoria %>
                </option>
              <% } -%>
            </select>
          </div>

          <button style="background-color: green;" type="submit" class="btn btn-primary">
            Actualizar Producto
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>
